<Window x:Class="HideUsers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hide Users" Height="150" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Name="MsgLbl"></Label>
        <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">Available Users :</Label>
        <ComboBox Width="Auto" Height="25" MinWidth="100" Name="UserCombo" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="25 0 0 0"></ComboBox>
        <Button Content="Hide" Width="40" Height="25" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="5 5 20 0" Click="Button_Click"></Button>
    </Grid>
</Window>
